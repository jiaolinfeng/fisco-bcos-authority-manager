<AnchorPane prefWidth="530.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esunny.controller.ImportGroupDialogController">
   <children>
      <GridPane alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="500.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="400.0" prefWidth="400.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Group Address" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <TextField fx:id="groupField" prefHeight="30.0" prefWidth="393.0" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleConfirm" prefHeight="30.0" text="Confirm" />
            <Button mnemonicParsing="false" onAction="#handleCancel" prefHeight="30.0" text="Cancel" />
         </children>
      </HBox>
   </children>
